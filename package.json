{
  "name": "heligonzalespe-portfolio",
  "version": "1.0.0",
  "description": "Landing page profesional de Helí Gonzales Pérez - Especialista en ML, LLMs, Agentes, MCP, RAG e Infraestructura",
  "main": "index.html",
  "scripts": {
    "prep": "shx mkdir -p dist/js dist/css",
    "minify-css": "npx clean-css-cli -o dist/css/styles.min.css css/styles.css",
    "minify-js": "npx terser js/main.js -o dist/js/main.min.js --compress --mangle --source-map",
    "build": "echo 'Building static site...' && npm run prep && npm run minify-css && npm run minify-js"
  },
  "keywords": [
    "portfolio",
    "machine-learning",
    "llms",
    "agents",
    "mcp",
    "rag",
    "infrastructure",
    "data-science",
    "ai"
  ],
  "author": "Helí Gonzales Pérez",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "clean-css-cli": "^5.6.2",
    "terser": "^5.31.0",
    "shx": "^0.3.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heligonzalespe/portfolio.git"
  },
  "homepage": "https://heligonzalespe.github.io/portfolio"
}
